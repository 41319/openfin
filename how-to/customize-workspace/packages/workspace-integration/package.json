    "scripts": {
        "build-clean": "rimraf ./dist/esm/* ./typings/*",
        "build-lint": "eslint src --ext .ts",
        "build-compile": "tsc",
        "build-p": "run-p build-lint build-compile",
        "build": "run-s build-clean build-p",
        "format": "prettier --config .prettierrc src/**/* --write",
        "package-clean": "rimraf ./dist/*",
        "package-cjs": "webpack build --config ./webpack.config.js --mode=development",
        "package": "run-s package-clean package-cjs",
        "dist": "run-s format build package"
    },
    "dependencies": {
        "@openfin/workspace": "6.3.6",
        "@openfin/workspace-platform": "6.3.6",
