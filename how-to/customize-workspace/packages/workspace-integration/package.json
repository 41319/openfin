        "@rollup/plugin-node-resolve": "^13.1.3",
        "@typescript-eslint/eslint-plugin": "^5.16.0",
        "@typescript-eslint/parser": "^5.16.0",
        "eslint": "^8.10.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsdoc": "^38.0.6",
        "eslint-plugin-unicorn": "^41.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.6.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.70.1",
        "ts-loader": "^9.2.6",
        "typescript": "^4.6.3",
        "webpack": "^5.51.1",
        "webpack-cli": "^4.8.0"
